<% layout("/layouts/boilerplate") %>
<body>
    <h2><%= user.username %>'s Project Submissions</h2>

    <% if (projects.length === 0) { %>
      <p>No projects submitted yet.</p>
    <% } else { %>
      <div class="row row-cols-1 row-cols-md-2 g-4 mt-3">
        <% projects.forEach(project => { %>
          <div class="col">
            <div class="card shadow-sm">
              <div class="card-body">
                <h5 class="card-title"><%= project.title %></h5>
                <p class="card-text">
                  <strong>Role:</strong> <%= project.piOrCoPi %><br>
                  <strong>Funding Agency:</strong> <%= project.fundingAgency %><br>
                  <strong>Date of Submission:</strong> <%= project.dateOfSubmission.toDateString() %><br>
                  <strong>Fund Requested:</strong> â‚¹<%= project.fundRequestedLacs %> Lakhs
                </p>
                <a href="/faculty/projects/<%= user._id %>/<%= project._id %>" class="btn btn-primary btn-sm mt-2">View Details</a>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    <% } %>
</body>