<% layout("/layouts/boilerplate") %>
<div class="container py-4">
  <h2 class="mb-4"><i class="bi bi-person-plus"></i> Register New User</h2>
  
  <form action="/admin/signup" method="POST" class="needs-validation" novalidate>
    <div class="mb-3">
      <label for="facultyId" class="form-label">Faculty ID</label>
      <input type="text" name="facultyId" id="facultyId" class="form-control" required>
      <div class="valid-feedback">
        Faculty ID looks good!
      </div>
    </div>

    <div class="mb-3">
      <label for="username" class="form-label">Username</label>
      <input type="text" name="username" id="username" class="form-control" required>
      <div class="valid-feedback">
        Username looks good!
      </div>
    </div>

    <div class="mb-3">
      <label for="password" class="form-label">Password</label>
      <input type="password" name="password" id="password" class="form-control" required>
      <div class="valid-feedback">
        Password is secured!
      </div>
    </div>

    <div class="mb-3">
      <label for="role" class="form-label">Role</label>
      <select name="role" id="role" class="form-select" required onchange="handleRoleChange(this.value)">
        <option value="">-- Select Role --</option>
        <option value="faculty">Faculty</option>
        <option value="hoi">HOI</option>
      </select>
      
    </div>

    <div class="mb-3" id="schoolField">
      <label for="school" class="form-label">School</label>
      <select name="school" id="school" class="form-select" required onchange="updateDepartments()">
        <option value="">-- Select School --</option>
        <option value="ASET">ASET</option>
        <option value="ALS">ALS</option>
      </select>
    </div>
    
    <div class="mb-3" id="departmentField">
      <label for="department" class="form-label">Department</label>
      <select name="department" id="department" class="form-select" required>
        <option value="">-- Select Department --</option>
      </select>
    </div>

    <button type="submit" class="btn btn-primary"><i class="bi bi-plus-lg"></i> Register User</button>
  </form>
</div>

<script src="/js/signup.js"></script>