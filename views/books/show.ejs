<% layout("/layouts/boilerplate") %>
<body>
    <br>
    <h2>Books and Chapters</h2>
    <br>

    <div class="card mt-3 shadow-sm">
      <div class="card-body">
        <h4 class="card-title mb-3"><%= book.title %></h4>
        <ul class="list-group list-group-flush">
          <li class="list-group-item"><strong>Publication Date:</strong> <%= book.publicationDate.toDateString() %></li>
          <li class="list-group-item"><strong>ISBN:</strong> <%= book.isbn %></li>
          <li class="list-group-item"><strong>Publisher:</strong> <%= book.publisher %></li>
        </ul>
        <a href="/faculty/books/<%= user._id %>" class="btn btn-secondary mt-3">Back to All Books</a>
        <br><br>
        <form>
            <button>Edit</button>
        </form>
        <br>
        <form>
            <button>Delete</button>
        </form>
      </div>
    </div>
</body>