<% layout("/layouts/boilerplate") %>
<body>
    <br>
    <h2><%= user.username %>'s Awards & Achievements</h2>
    <br>
    <% if (awards.length === 0) { %>
      <p>No awards or achievements recorded yet.</p>
    <% } else { %>
      <div class="row row-cols-1 row-cols-md-2 g-4 mt-3">
        <% awards.forEach(award => { %>
          <div class="col">
            <div class="card shadow-sm">
              <div class="card-body">
                <h5 class="card-title"><%= award.awardTitle %></h5>
                <p class="card-text">
                  <strong>Awarded By:</strong> <%= award.awardingAgency %><br>
                  <strong>Date:</strong> <%= award.date.toDateString() %><br>
                  <strong>Type:</strong> <%= award.awardDetails %>
                </p>
                <a href="/faculty/awards/<%= user._id %>/<%= award._id %>" class="btn btn-primary btn-sm mt-2">View Details</a>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    <% } %>
</body>