<% layout("/layouts/boilerplate") %>
<body>
    <br>
    <h2>Award / Achievement Details</h2>
    <br>

    <div class="card mt-3 shadow-sm">
      <div class="card-body">
        <h4 class="card-title mb-3"><%= award.awardTitle %></h4>
        <ul class="list-group list-group-flush">
          <li class="list-group-item"><strong>Date:</strong> <%= award.date.toDateString() %></li>
          <li class="list-group-item"><strong>Awarding Agency:</strong> <%= award.awardingAgency %></li>
          <li class="list-group-item"><strong>Award Details:</strong> <%= award.awardDetails %></li>
        </ul>
        <a href="/faculty/awards/<%= user._id %>" class="btn btn-secondary mt-3">Back to All Awards</a>
        <br><br>
        <form>
            <button>Edit</button>
        </form>
        <br>
        <form>
            <button>Delete</button>
        </form>
      </div>
    </div>
</body>